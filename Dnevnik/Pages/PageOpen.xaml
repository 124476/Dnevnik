<Page x:Class="Dnevnik.Pages.PageOpen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dnevnik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageOpen">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Login" FontSize="17"></TextBlock>
            <TextBox x:Name="Login" FontSize="17"></TextBox>
            <TextBlock Text="Password" FontSize="17"></TextBlock>
            <TextBox x:Name="Password" FontSize="17"></TextBox>
            <Button x:Name="OpenBtn" Content="Войти" Click="OpenBtn_Click" Style="{StaticResource StandartButton}" Margin="0,10"></Button>
        </StackPanel>
    </Grid>
</Page>
